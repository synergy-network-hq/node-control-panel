# ============================================================================
# SYNERGY NETWORK CONTROL PANEL - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in the actual values
# This file documents all required configuration for setting up real Synergy nodes

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Which network to connect to (mainnet, testnet, devnet)
SYNERGY_NETWORK=devnet

# Network Chain ID
SYNERGY_CHAIN_ID=338638

# Bootstrap nodes for peer discovery (comma-separated multiaddrs)
# These are well-known nodes that help new nodes discover peers on the network
# Format: /ip4/<ip>/tcp/<port>/p2p/<peer-id> or /dns4/<domain>/tcp/<port>/p2p/<peer-id>
# Example: /ip4/45.32.123.45/tcp/30303/p2p/12D3KooW...,/dns4/bootstrap1.synergy.network/tcp/30303/p2p/12D3KooW...
SYNERGY_BOOTSTRAP_NODES=

# Network RPC endpoint (if applicable)
SYNERGY_RPC_ENDPOINT=


# ============================================================================
# BINARY DOWNLOADS & REPOSITORIES
# ============================================================================

# GitHub repository for Synergy Network node software
SYNERGY_GITHUB_REPO=

# Release version or tag to download (e.g., v1.0.0, latest)
SYNERGY_VERSION=latest

# Direct download URLs for node binaries (if not using GitHub releases)
# Format: https://releases.synergy.network/{version}/{platform}/{binary}

# Class I - Consensus Nodes
SYNERGY_BINARY_VALIDATOR=
SYNERGY_BINARY_COMMITTEE=
SYNERGY_BINARY_ARCHIVE_VALIDATOR=
SYNERGY_BINARY_AUDIT_VALIDATOR=

# Class II - Interoperability Nodes
SYNERGY_BINARY_RELAYER=
SYNERGY_BINARY_WITNESS=
SYNERGY_BINARY_ORACLE=
SYNERGY_BINARY_UMA_COORDINATOR=
SYNERGY_BINARY_CROSS_CHAIN_VERIFIER=

# Class III - Intelligence & Computation Nodes
SYNERGY_BINARY_COMPUTE=
SYNERGY_BINARY_AI_INFERENCE=
SYNERGY_BINARY_PQC_CRYPTO=
SYNERGY_BINARY_DATA_AVAILABILITY=

# Class IV - Governance & Treasury Nodes
SYNERGY_BINARY_GOVERNANCE_AUDITOR=
SYNERGY_BINARY_TREASURY_CONTROLLER=
SYNERGY_BINARY_SECURITY_COUNCIL=

# Class V - Service & Support Nodes
SYNERGY_BINARY_RPC_GATEWAY=
SYNERGY_BINARY_INDEXER=
SYNERGY_BINARY_OBSERVER=

# Alternative: Single unified binary with different modes?
# If all node types use the same binary with different configs, specify here:
SYNERGY_UNIFIED_BINARY_URL=


# ============================================================================
# BUILD FROM SOURCE (if binaries not available)
# ============================================================================

# Should we build from source instead of downloading binaries?
SYNERGY_BUILD_FROM_SOURCE=false

# Repository to clone for building
SYNERGY_SOURCE_REPO=

# Build commands (semicolon-separated)
SYNERGY_BUILD_COMMANDS=


