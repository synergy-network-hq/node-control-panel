# ============================================================================
# HARDWARE REQUIREMENTS (for validation)
# ============================================================================
# The control panel will check if the system meets minimum requirements

# Enable hardware requirements checking?
SYNERGY_ENABLE_HW_VALIDATION=false

# Minimum requirements are defined in code based on the whitepaper:
# - Validator Node: CPU >= 8 core (3.0 GHz+), RAM 32 GB, NVMe 1 TB SSD, 1Gbps network
# - Committee Node: CPU 6 core, RAM 24 GB, SSD 512 GB
# - Archive Validator: CPU 12 core, RAM 64 GB, SSD >= 4 TB
# - Audit Validator: CPU 8 core, RAM 32 GB, SSD 1 TB
# - Relayer: CPU 12 core, RAM 64 GB, NVMe 2 TB, 1 Gbps network
# - Witness Node: CPU 8 core, RAM 32 GB, SSD 1 TB
# - Oracle Node: CPU 8 core, RAM 16 GB
# - UMA Coordinator: CPU 8 core, RAM 32 GB, SSD 1 TB
# - Cross-Chain Verifier: CPU 16 core, RAM 64 GB, GPU 8 GB VRAM
# - Compute Node: CPU 16 core, GPU+, 12 GB VRAM, RAM 64 GB, NVMe 2 TB
# - AI Inference Node: CPU 12 core + GPU, 8 GB VRAM, RAM 48 GB
# - PQC Cryptography Node: CPU 8 core (AVXZ1), RAM 16 GB
# - Data-Availability Node: CPU 8 core, RAM 32 GB, SSD >= 6 TB (HDD)
# - Governance Auditor Node: CPU 6 core, RAM 16 GB
# - Treasury Controller Node: CPU 8 core, RAM 16 GB, SSD, HSM recommended
# - Security Council Node: CPU 8 core, RAM 16 GB, SSD, HSM mandatory
# - RPC Gateway Node: CPU 4 core, RAM 8 GB, SSD 500 GB, 1Gbps network
# - Indexer & Explorer Node: CPU 8 core, RAM 32 GB, SSD 1 TB (PostgreSQL + Elastic)
# - Observer / Light Node: CPU 2 core, RAM 4 GB, SSD 128 GB


# ============================================================================
# ADDITIONAL CONFIGURATION
# ============================================================================

# Default ports (can be customized during setup)
SYNERGY_DEFAULT_RPC_PORT=8545
SYNERGY_DEFAULT_P2P_PORT=30303
SYNERGY_DEFAULT_METRICS_PORT=9090

# ============================================================================
# NODE IDENTITY & REWARDS CONFIGURATION
# ============================================================================

# Node Address Configuration (sYnV1- through sYnV5- depending on node class)
# How should the setup wizard handle node address generation?
# Options:
#   - generate: Auto-generate a new node address
#   - import: Prompt user to import existing node private key
#   - prompt: Ask user to enter existing node address
SYNERGY_NODE_ADDRESS_MODE=generate

# Reward Wallet Address (sYnU-, sYnA-, sYnZ-, sYnS-)
# Where should staking rewards and node earnings be sent?
# Options:
#   - prompt: Ask user to enter their wallet address
#   - later: Skip for now, can configure later in settings
SYNERGY_REWARD_WALLET_MODE=prompt

# Address Format Examples (for validation):
# Wallet addresses: sYnU-, sYnA-, sYnZ-, sYnS- (for user funds/tokens)
# Node addresses by class:
#   - Class I (Consensus): sYnV1-...
#   - Class II (Interoperability): sYnV2-...
#   - Class III (Intelligence & Computation): sYnV3-...
#   - Class IV (Governance & Treasury): sYnV4-...
#   - Class V (Service & Support): sYnV5-...

# Documentation URLs
SYNERGY_DOCS_URL=https://synergy-network.io/docs
SYNERGY_DISCORD_URL=https://discord.gg/SynergyNetworkHQ
SYNERGY_SUPPORT_URL=https://support.synergy-network.io


# ============================================================================
# PLATFORM-SPECIFIC BINARIES
# ============================================================================
# If different platforms have different binary names/URLs

# Binary naming convention
# Options: unified (synergy-node), typed (synergy-validator, synergy-oracle, etc.)
SYNERGY_BINARY_NAMING=typed

# Platform-specific suffixes
# Example: synergy-validator-linux-amd64, synergy-validator-darwin-aarch64
SYNERGY_BINARY_PLATFORM_LINUX_AMD64=linux-amd64
SYNERGY_BINARY_PLATFORM_LINUX_ARM64=linux-arm64
SYNERGY_BINARY_PLATFORM_DARWIN_AMD64=darwin-amd64
SYNERGY_BINARY_PLATFORM_DARWIN_ARM64=darwin-arm64
SYNERGY_BINARY_PLATFORM_WINDOWS_AMD64=windows-amd64.exe


# ============================================================================
# MONITORING & TELEMETRY
# ============================================================================

# Enable telemetry and metrics collection?
SYNERGY_ENABLE_METRICS=true

# Metrics endpoint (if centralized)
SYNERGY_METRICS_ENDPOINT=

# Log level (debug, info, warn, error)
SYNERGY_LOG_LEVEL=info


