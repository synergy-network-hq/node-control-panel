# ============================================================================
# SYNERGY NETWORK NODE CONTROL PANEL - ENVIRONMENT CONFIGURATION (DEVNET)
# ============================================================================
# Copy this file to .env and fill in real values before deployment.

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Network selection
SYNERGY_NETWORK=devnet

# Devnet Chain ID (confirmed)
SYNERGY_CHAIN_ID=338638

# Devnet bootstrap nodes
# NOTE: These come from your actual working Devnet nodes:
# Mac Mini: 192.168.1.68
# HP Victus: 192.168.1.98
#
# Example multiaddr format:
# /ip4/192.168.1.68/tcp/30303/p2p/<PEER-ID>
# /ip4/192.168.1.98/tcp/30303/p2p/<PEER-ID>
#
# Insert peer IDs once your node control panel extracts them.
SYNERGY_BOOTSTRAP_NODES=/ip4/192.168.1.68/tcp/30303/p2p/XXXXXXXX,/ip4/192.168.1.98/tcp/30303/p2p/YYYYYYYY

# Devnet RPC endpoint (your Mac Mini node)
SYNERGY_RPC_ENDPOINT=http://192.168.1.68:8545


# ============================================================================
# BINARY DOWNLOADS & REPOSITORIES
# ============================================================================

# Repo containing the Synergy Devnet node software
SYNERGY_GITHUB_REPO=https://github.com/synergy-network-hq/synergy-devnet

# Version to download (devnet always tracks latest)
SYNERGY_VERSION=latest

# ============================================================================
# UNIFIED BINARY CONFIGURATION (DEVNET)
# ============================================================================

# We are using one unified binary "synergy-node"
# Node role is selected by config + CLI flags
SYNERGY_UNIFIED_BINARY_URL=https://releases.synergy.network/devnet/latest/synergy-node

# Binary naming model
SYNERGY_BINARY_NAMING=unified

# Platform builds
SYNERGY_BINARY_PLATFORM_LINUX_AMD64=linux-amd64
SYNERGY_BINARY_PLATFORM_LINUX_ARM64=linux-arm64
SYNERGY_BINARY_PLATFORM_DARWIN_AMD64=darwin-amd64
SYNERGY_BINARY_PLATFORM_DARWIN_ARM64=darwin-arm64
SYNERGY_BINARY_PLATFORM_WINDOWS_AMD64=windows-amd64.exe


# ============================================================================
# BUILD FROM SOURCE (fallback)
# ============================================================================

SYNERGY_BUILD_FROM_SOURCE=false
SYNERGY_SOURCE_REPO=https://github.com/synergy-network-hq/synergy-devnet
SYNERGY_BUILD_COMMANDS=cargo build --release


# ============================================================================
# NODE COMPATIBILITY MATRIX
# ============================================================================
# A single machine may run multiple logical roles using unified binary modes.

SYNERGY_COMPAT_VALIDATOR=committee,archive_validator,audit_validator
SYNERGY_COMPAT_COMMITTEE=validator
SYNERGY_COMPAT_ARCHIVE_VALIDATOR=validator
SYNERGY_COMPAT_AUDIT_VALIDATOR=validator
SYNERGY_COMPAT_RELAYER=witness,oracle
SYNERGY_COMPAT_WITNESS=relayer
SYNERGY_COMPAT_ORACLE=relayer
SYNERGY_COMPAT_UMA_COORDINATOR=cross_chain_verifier
SYNERGY_COMPAT_CROSS_CHAIN_VERIFIER=uma_coordinator
SYNERGY_COMPAT_COMPUTE=ai_inference,pqc_crypto
SYNERGY_COMPAT_AI_INFERENCE=compute
SYNERGY_COMPAT_PQC_CRYPTO=compute
SYNERGY_COMPAT_DATA_AVAILABILITY=archive_validator
SYNERGY_COMPAT_GOVERNANCE_AUDITOR=security_council
SYNERGY_COMPAT_TREASURY_CONTROLLER=security_council
SYNERGY_COMPAT_SECURITY_COUNCIL=governance_auditor,treasury_controller
SYNERGY_COMPAT_RPC_GATEWAY=indexer,observer
SYNERGY_COMPAT_INDEXER=rpc_gateway
SYNERGY_COMPAT_OBSERVER=rpc_gateway


# ============================================================================
# STAKING & BONDING REQUIREMENTS
# ============================================================================

SYNERGY_STAKE_VALIDATOR=100000
SYNERGY_STAKE_COMMITTEE=0
SYNERGY_STAKE_ARCHIVE_VALIDATOR=0
SYNERGY_STAKE_AUDIT_VALIDATOR=0
SYNERGY_STAKE_RELAYER=250000
SYNERGY_STAKE_WITNESS=250000
SYNERGY_STAKE_ORACLE=50000
SYNERGY_STAKE_UMA_COORDINATOR=0
SYNERGY_STAKE_CROSS_CHAIN_VERIFIER=0
SYNERGY_STAKE_COMPUTE=0
SYNERGY_STAKE_AI_INFERENCE=0
SYNERGY_STAKE_PQC_CRYPTO=0
SYNERGY_STAKE_DATA_AVAILABILITY=0
SYNERGY_STAKE_GOVERNANCE_AUDITOR=10000
SYNERGY_STAKE_TREASURY_CONTROLLER=0
SYNERGY_STAKE_SECURITY_COUNCIL=0
SYNERGY_STAKE_RPC_GATEWAY=0
SYNERGY_STAKE_INDEXER=0
SYNERGY_STAKE_OBSERVER=0


# ============================================================================
# CONFIG TEMPLATE URLS
# ============================================================================

SYNERGY_CONFIG_TEMPLATE_VALIDATOR=https://configs.synergy.network/devnet/templates/validator.toml
SYNERGY_CONFIG_TEMPLATE_COMMITTEE=https://configs.synergy.network/devnet/templates/committee.toml
SYNERGY_CONFIG_TEMPLATE_ARCHIVE_VALIDATOR=https://configs.synergy.network/devnet/templates/archive-validator.toml
SYNERGY_CONFIG_TEMPLATE_AUDIT_VALIDATOR=https://configs.synergy.network/devnet/templates/audit-validator.toml
SYNERGY_CONFIG_TEMPLATE_RELAYER=https://configs.synergy.network/devnet/templates/relayer.toml
SYNERGY_CONFIG_TEMPLATE_WITNESS=https://configs.synergy.network/devnet/templates/witness.toml
SYNERGY_CONFIG_TEMPLATE_ORACLE=https://configs.synergy.network/devnet/templates/oracle.toml
SYNERGY_CONFIG_TEMPLATE_UMA_COORDINATOR=https://configs.synergy.network/devnet/templates/uma-coordinator.toml
SYNERGY_CONFIG_TEMPLATE_CROSS_CHAIN_VERIFIER=https://configs.synergy.network/devnet/templates/cross-chain-verifier.toml
SYNERGY_CONFIG_TEMPLATE_COMPUTE=https://configs.synergy.network/devnet/templates/compute.toml
SYNERGY_CONFIG_TEMPLATE_AI_INFERENCE=https://configs.synergy.network/devnet/templates/ai-inference.toml
SYNERGY_CONFIG_TEMPLATE_PQC_CRYPTO=https://configs.synergy.network/devnet/templates/pqc-crypto.toml
SYNERGY_CONFIG_TEMPLATE_DATA_AVAILABILITY=https://configs.synergy.network/devnet/templates/data-availability.toml
SYNERGY_CONFIG_TEMPLATE_GOVERNANCE_AUDITOR=https://configs.synergy.network/devnet/templates/governance-auditor.toml
SYNERGY_CONFIG_TEMPLATE_TREASURY_CONTROLLER=https://configs.synergy.network/devnet/templates/treasury-controller.toml
SYNERGY_CONFIG_TEMPLATE_SECURITY_COUNCIL=https://configs.synergy.network/devnet/templates/security-council.toml
SYNERGY_CONFIG_TEMPLATE_RPC_GATEWAY=https://configs.synergy.network/devnet/templates/rpc-gateway.toml
SYNERGY_CONFIG_TEMPLATE_INDEXER=https://configs.synergy.network/devnet/templates/indexer.toml
SYNERGY_CONFIG_TEMPLATE_OBSERVER=https://configs.synergy.network/devnet/templates/observer.toml


# ============================================================================
# HARDWARE REQUIREMENTS CHECKS
# ============================================================================

SYNERGY_ENABLE_HW_VALIDATION=false

# Requirements are enforced dynamically by the control panel


# ============================================================================
# DEFAULT PORTS
# ============================================================================

SYNERGY_DEFAULT_RPC_PORT=8545
SYNERGY_DEFAULT_P2P_PORT=30303
SYNERGY_DEFAULT_METRICS_PORT=9090


# ============================================================================
# NODE IDENTITY & REWARD SETTINGS
# ============================================================================

SYNERGY_NODE_ADDRESS_MODE=generate
SYNERGY_REWARD_WALLET_MODE=prompt

# Documentation
SYNERGY_DOCS_URL=https://synergy-network.io/docs
SYNERGY_DISCORD_URL=https://discord.gg/SynergyNetworkHQ
SYNERGY_SUPPORT_URL=https://support.synergy-network.io


# ============================================================================
# MONITORING & TELEMETRY
# ============================================================================

SYNERGY_ENABLE_METRICS=true
SYNERGY_METRICS_ENDPOINT=
SYNERGY_LOG_LEVEL=info
